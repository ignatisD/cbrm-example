{
  "name": "@ignatisd/cbrm-example",
  "version": "0.0.0-semantic-released",
  "description": "A CBRM example project",
  "author": "Ignatios Drakoulas",
  "license": "MIT",
  "scripts": {
    "start": "NODE_OPTIONS=--max_old_space_size=8192 nodemon src/index.ts",
    "build": "tsc -b tsconfig.json",
    "test": "npm run eslint",
    "eslint": "eslint -c .eslintrc.js --ext .ts src",
    "sr": "npx semantic-release --dry-run"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ignatisD/cbrm-example.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/ignatisD/cbrm-example/issues"
  },
  "homepage": "https://github.com/ignatisD/cbrm-example#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "nodemonConfig": {
    "verbose": false,
    "watch": [
      "src/**/*.ts",
      ".env"
    ],
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "signal": "SIGTERM",
    "delay": 1,
    "ext": "ts",
    "exec": "ts-node"
  },
  "dependencies": {
    "@ignatisd/cbrm": "^3.0.0",
    "@ignatisd/cbrm-mongoose": "^3.0.0",
    "i18n": "^0.9.1",
    "mongoose": "6.0.7",
    "mongoose-aggregate-paginate-v2": "^1.0.5",
    "mongoose-paginate-v2": "^1.4.2",
    "mongoose-slug-updater": "^3.3.0",
    "nodemailer": "^6.4.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^37.0.3",
    "eslint-plugin-no-null": "^1.0.2",
    "nodemon": "^2.0.4",
    "ts-node": "^5.0.1",
    "typescript": "^4.4"
  }
}
