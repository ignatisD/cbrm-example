{
  "name": "@ignatisd/cbrm-example",
  "version": "1.0.0",
  "description": "A CBRM example project",
  "author": "Ignatios Drakoulas",
  "license": "MIT",
  "scripts": {
    "start": "NODE_OPTIONS=--max_old_space_size=8192 nodemon src/index.ts",
    "build": "tsc -b tsconfig.json",
    "test": "npm run eslint",
    "eslint": "eslint -c .eslintrc.js --ext .ts src",
    "sr": "npx semantic-release --dry-run",
    "docker": "docker stack deploy -c docker-compose.yml dev"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ignatisD/cbrm-example.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/ignatisD/cbrm-example/issues"
  },
  "homepage": "https://github.com/ignatisD/cbrm-example#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "nodemonConfig": {
    "verbose": false,
    "watch": [
      "src/**/*.ts",
      ".env"
    ],
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "signal": "SIGTERM",
    "delay": 1,
    "ext": "ts",
    "exec": "ts-node"
  },
  "dependencies": {
    "@ignatisd/cbrm": "^5.0.0",
    "@ignatisd/cbrm-mongoose": "^5.0.0",
    "@ignatisd/cbrm-elasticsearch": "^3.0.0",
    "@ignatisd/cbrm-parse-server": "^2.0.0",
    "i18n": "^0.14.2",
    "mongoose": "6.2.6",
    "mongoose-aggregate-paginate-v2": "^1.0.6",
    "mongoose-paginate-v2": "^1.6.3",
    "mongoose-slug-updater": "^3.3.0",
    "nodemailer": "^6.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/nodemailer": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.11.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^38.0.2",
    "eslint-plugin-no-null": "^1.0.2",
    "nodemon": "^2.0.15",
    "ts-node": "^5.0.1",
    "typescript": "^4.6"
  }
}
